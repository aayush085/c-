#include <iostream>
using namespace std;

int main() {
    int a[2][2],b[2][2],c[2][2];
    int i,j;
    cout<<"enter the element of array a:";
    for(i=0;i<=1;i++){
        for(j=0;j<=1;j++){
            cin>>a[i][j];
        }
    }
        cout<<"enter the element of array b:";
    for(i=0;i<=1;i++){
        for(j=0;j<=1;j++){
            cin>>b[i][j];
        }
    }
        cout<<"now the array is:";
    for(i=0;i<=1;i++){
        for(j=0;j<=1;j++){
       c[i][j]=a[i][j]+b[i][j];
       cout<<c[i][j];
        }
    }

    return 0;
}
